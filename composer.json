{
    "name": "alizharb/hookx",
    "description": "A next-generation, high-performance PHP 8.3+ hook and event system with async support.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "Ali Harb",
            "email": "harbzali@gmail.com",
            "role": "Developer",
            "homepage": "https://github.com/AlizHarb"
        }
    ],
    "require": {
        "php": "^8.3"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "phpstan/phpstan": "^2.1",
        "friendsofphp/php-cs-fixer": "^3.90",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "AlizHarb\\Hookx\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "AlizHarb\\Hookx\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "pest",
        "test:coverage": "pest --coverage",
        "check-style": "php-cs-fixer fix --dry-run --diff",
        "fix-style": "php-cs-fixer fix",
        "analyse": "php -d memory_limit=2G vendor/bin/phpstan analyse"
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        },
        "sort-packages": true,
        "optimize-autoloader": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
